<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <color android:color="@color/gray_background"/>
            </item>
            <item android:top="5dp" android:bottom="3dp" android:left="5dp" android:right="5dp">
                <shape>
                    <solid
                        android:color="@color/gray_shadow"/>
                    <corners
                        android:radius="3dp"/>
                </shape>
            </item>
            <item android:top="5dp" android:bottom="5dp" android:left="5dp" android:right="5dp">
                <shape>
                    <solid
                        android:color="@color/white"/>
                    <corners
                        android:radius="3dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <color android:color="@color/gray_background"/>
            </item>
            <item android:top="5dp" android:bottom="3dp" android:left="5dp" android:right="5dp">
                <shape>
                    <solid
                        android:color="@color/gray_shadow"/>
                    <corners
                        android:radius="3dp"/>
                </shape>
            </item>
            <item android:top="5dp" android:bottom="5dp" android:left="5dp" android:right="5dp">
                <shape>
                    <solid
                        android:color="@color/gray_pressed"/>
                    <corners
                        android:radius="3dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>